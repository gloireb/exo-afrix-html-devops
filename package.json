{
  "name": "exo-afrix-html-devops",
  "version": "1.0.0",
  "description": "Projet d'initiation au devops",
  "main": "index.js",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "lint:css": "stylelint '**/*.{css,html}'",
    "lint:html": "htmlhint ./",
    "lint": "npm run lint:css && npm run lint:html",
    "test": "npm run lint && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tacite243/exo-afrix-html-devops.git"
  },
  "keywords": [
    "html",
    "tailwind",
    "css",
    "template",
    "devops",
    "github-actions",
    "frontend"
  ],
  "author": "professor",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Tacite243/exo-afrix-html-devops/issues"
  },
  "homepage": "https://github.com/Tacite243/exo-afrix-html-devops#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "autoprefixer": "^10.4.20",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.0",
    "postcss": "^8.4.38",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.4"
  }
}
